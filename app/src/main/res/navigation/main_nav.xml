<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/recyclerFragment">

    <fragment
        android:id="@+id/recyclerFragment"
        android:name="com.example.shoppinglist_myown_v2.presentation.screens.recycler.RecyclerFragment"
        android:label="fragment_recycler"
        tools:layout="@layout/fragment_recycler" >
        <action
            android:id="@+id/action_recyclerFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/recyclerFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.shoppinglist_myown_v2.presentation.screens.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_recyclerFragment"
            app:destination="@id/recyclerFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="shopItem"
            app:argType="com.example.shoppinglist_myown_v2.domain.entity.ShopItem"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>